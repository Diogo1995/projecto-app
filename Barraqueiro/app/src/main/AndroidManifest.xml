<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diogo.barraqueiro">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/barraqueirologo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/barraqueirologo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:configChanges="locale"
        >

        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Menu" android:parentActivityName=".Login" />
        <activity android:name=".Settings" android:parentActivityName=".Menu"/>

    </application>

</manifest>